<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/avalonia"
        x:Class="GeneticAlgo.AvaloniaInterface.MainWindow"
        Title="GeneticAlgo.GraphicalInterface">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <oxy:PlotView Grid.Column="0" Grid.Row="0" Name="PlotSample" Model="{Binding ScatterModel}" Margin="10,150,10,215" Width="700" Height="700"/>
        <oxy:PlotView Grid.Column="1" Grid.Row="0" Name="PlotSample2" Model="{Binding BarModel}" Margin="0, 0, 20, 0" VerticalAlignment="Center" Width="800" Height="300"/>

        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
            <Button Content="Run" Name="Run" IsVisible="{Binding !IsRunning}" Width="75" Margin="6,4,6,4" Click="Run_OnClick" />
            <Button Content="Stop" Name="Stop" IsVisible="{Binding IsRunning}" Width="75" Margin="6,4,6,4" Click="Stop_OnClick" />
        </StackPanel>
    </Grid>
</Window>